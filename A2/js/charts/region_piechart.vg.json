{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "data/emdat-1960-2023.csv"
    },
    "transform": [
        {
            "aggregate": [
                {
                    "op": "count",
                    "field": "DisNo.",
                    "as": "num_dis"
                }
            ],
            "groupby": [
                "Region"
            ]
        }
    ],
    "mark": {
        "type": "arc",
        "tooltip": true
    },
    "encoding": {
        "color": {
            "field": "Region",
            "type": "nominal"
        },
        "theta": {
            "field": "num_dis",
            "type": "quantitative",
            "title": "Number of Reported Disasters (1960-2023)"
        }
    }
}