{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "background": "whitesmoke",
    "title": "Total Damages by Country",
    "data": {
        "url": "data/emdat-1960-2023.csv"
    },
    "transform": [
        {
            "aggregate": [
                {
                    "op": "sum",
                    "field": "Total Damage, Adjusted (\\'000 US$)",
                    "as": "total_damage_adjusted"
                },
                {
                    "op": "count",
                    "field": "DisNo.",
                    "as": "num_dis"
                }
            ],
            "groupby": [
                "Country"
            ]
        },
        {
            "window": [
                {
                    "op": "rank",
                    "as": "rank"
                }
            ],
            "sort": [
                {
                    "field": "total_damage_adjusted",
                    "order": "descending"
                }
            ]
        },
        {
            "filter": "datum['rank'] <= 10"
        }
    ],
    "layer": [
        {
            "mark": "bar",
            "encoding": {
                "x": {
                    "field": "Country",
                    "type": "nominal",
                    "sort": "-y",
                    "title": "Country",
                    "axis": {
                        "labelLimit": 40,
                        "labelAngle": -60
                    }
                },
                "y": {
                    "field": "total_damage_adjusted",
                    "type": "quantitative",
                    "title": "Total Damage (USD)",
                    "axis": {
                        "format": "$"
                    }
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "title": "Country"
                    },
                    {
                        "field": "total_damage_adjusted",
                        "title": "Total Damage (USD)",
                        "format": "$,"
                    },
                    {
                        "field": "num_dis",
                        "title": "Number of Reported Disasters (1960-2023)",
                        "format": ","
                    }
                ]
            }
        }
    ]
}