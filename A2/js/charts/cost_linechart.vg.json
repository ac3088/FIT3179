{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Total Damages per Year",
    "background": "whitesmoke",
    "view": {
        "stroke": "whitesmoke"
    },
    "data": {
        "url": "data/emdat-1960-2023.csv"
    },
    "params": [
        {
            "name": "cost_above",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 200000000,
                "step": 1000,
                "name": "Minimum Cost (USD): "
            }
        },
        {
            "name": "dtype",
            "select": {
                "type": "point",
                "fields": [
                    "Disaster Type"
                ]
            },
            "bind": "legend"
        }
    ],
    "transform": [
        {
            "aggregate": [
                {
                    "op": "sum",
                    "field": "Total Damage, Adjusted (\\'000 US$)",
                    "as": "total_damage_adjusted"
                }
            ],
            "groupby": [
                "Start Year",
                "Disaster Type"
            ]
        },
        {
            "filter": "datum['total_damage_adjusted'] >= cost_above"
        }
    ],
    "mark": "line",
    "encoding": {
        "x": {
            "field": "Start Year",
            "type": "temporal",
            "title": "Year"
        },
        "y": {
            "field": "total_damage_adjusted",
            "type": "quantitative",
            "title": "Total Damages (USD)",
            "axis": {
                "format": "$"
            }
        },
        "color": {
            "field": "Disaster Type",
            "type": "nominal"
        },
        "opacity": {
            "condition": {
                "param": "dtype",
                "value": 1
            },
            "value": 0.05
        },
        "tooltip": [
            {
                "field": "Start Year",
                "type": "temporal",
                "title": "Year",
                "format": "%Y"
            },
            {
                "field": "total_damage_adjusted",
                "type": "quantitative",
                "title": "Total Damage (USD)",
                "format": "$,"
            }
        ]
    }
}